<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_top_high"
        android:orientation="horizontal">

        <Button
            android:id="@+id/top_bar_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/school_name"
            android:gravity="center"
            android:text="@string/main_top_bar_school_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top_bar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2015年04月11日   13:44   星期一"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:background="@mipmap/line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:gravity="center">

        <TextView
            android:id="@+id/car_number"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/input"
            android:gravity="center_vertical"
            android:hint="@string/input_car_hint"
            android:paddingLeft="25dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_number"
            android:layout_marginTop="30dp"
            android:useDefaultMargins="true"
            android:columnCount="4"
            android:alignmentMode="alignBounds"
            android:rowCount="3">

            <Button
                android:id="@+id/number_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="7"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_8"
                style="@style/Car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:layout_marginLeft="30dp"
                android:text="8" />

            <Button
                android:id="@+id/number_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="9"
                android:layout_marginLeft="30dp"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="退格"
                android:layout_marginLeft="30dp"

                style="@style/Car_number_text" />

            <Button
                android:id="@+id/number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="4"
                android:layout_marginTop="30dp"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="5"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="6"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="0"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="1"
                android:layout_marginTop="30dp"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="2"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="3"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/t_number"
                android:text="确认"
                style="@style/Car_number_text" />
        </GridLayout>
    </RelativeLayout>


</RelativeLayout>
