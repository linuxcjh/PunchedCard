<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"

    tools:context=".MainActivity">


    <include
        layout="@layout/top_bar"
        android:id="@+id/top_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:gravity="center">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            android:columnCount="4"
            android:alignmentMode="alignBounds"
            android:rowCount="4">

            <TextView
                android:id="@+id/car_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/input"
                android:gravity="center_vertical"
                android:layout_columnSpan="4"
                android:hint="@string/input_car_hint"
                android:paddingLeft="25dp"
                android:maxLength="20"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/number_7"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="7"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_8"
                style="@style/Car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:layout_marginLeft="30dp"
                android:text="8" />

            <Button
                android:id="@+id/number_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="9"
                android:layout_marginLeft="30dp"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="退格"
                android:layout_marginLeft="30dp"

                style="@style/Car_number_text" />

            <Button
                android:id="@+id/number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="4"
                android:gravity="center"
                android:layout_marginTop="30dp"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="5"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="6"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="0"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="1"
                android:layout_marginTop="30dp"

                style="@style/Car_number" />

            <Button
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="2"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="3"
                style="@style/Car_number" />

            <Button
                android:id="@+id/number_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_btn_click"
                android:text="确认"
                style="@style/Car_number_text" />
        </GridLayout>
    </RelativeLayout>


</RelativeLayout>
